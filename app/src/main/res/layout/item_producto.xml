<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardItemProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgItemProducto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:src="@drawable/candy_img"
            android:tooltipText="@string/fab_description"/>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleItemProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Como super salado de 30gr"
                android:textColor="@color/success"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <TextView
                android:id="@+id/tvPrecioItemProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:lineSpacingExtra="-4dp"
                android:lineSpacingMultiplier="0.8"
                android:textColor="@color/gray"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <TextView
                android:id="@+id/tvCategoriaItemProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:lineSpacingExtra="-4dp"
                android:lineSpacingMultiplier="0.8"
                android:textColor="@color/gray"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceTitleMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                style="?attr/materialIconButtonFilledStyle"
                android:id="@+id/btnEditItemProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:contentDescription="@string/fab_description"
                app:icon="@drawable/baseline_edit_24"
                />

            <Button
                style="?attr/materialIconButtonFilledStyle"
                android:id="@+id/btnDeleteItemProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/alert"
                android:contentDescription="@string/fab_description"
                app:icon="@drawable/baseline_delete_24"
                />

        </LinearLayout>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>